{
  "manifest_version": 2,
  "name": "table_cell_copy",
  "version": "1.0.4",
  "description": "A copying table cell tool with 'ctrl + left click' like FireFox.",
  "icons" : {
    "48": "img/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "css/common.css"
      ],
      "js": ["js/jquery-3.3.1.min.js",
             "js/common.js"],
      "all_frames": true
    }
  ]
}
